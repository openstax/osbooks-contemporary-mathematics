  <entry><emphasis effect="bold">Standard Quota</emphasis></entry>
  <entry><math xmlns="http://www.w3.org/1998/Math/MathML" display="inline"><mrow><mfrac><mrow><mn>46</mn><mo>,</mo><mn>310</mn></mrow><mrow><mn>528.52</mn></mrow></mfrac><mo>≈</mo><mn>87.62</mn></mrow></math></entry>
  <entry xmlns="http://cnx.rice.edu/cnxml"><math xmlns="http://www.w3.org/1998/Math/MathML" display="inline"><mrow><mfrac><mrow><mn>224</mn><mo>,</mo><mn>230</mn></mrow><mrow><mn>528.52</mn></mrow></mfrac><mo>≈</mo><mn>424.26</mn></mrow></math></entry>
  <entry xmlns="http://cnx.rice.edu/cnxml"><math xmlns="http://www.w3.org/1998/Math/MathML" display="inline"><mrow><mfrac><mrow><mn>20</mn></mrow><mrow><mn>528.52</mn></mrow></mfrac><mo>≈</mo><mn>0.04</mn></mrow></math></entry>
  <entry xmlns="http://cnx.rice.edu/cnxml"><math xmlns="http://www.w3.org/1998/Math/MathML" display="inline"><mrow><mfrac><mrow><mn>16</mn><mo>,</mo><mn>560</mn></mrow><mrow><mn>528.52</mn></mrow></mfrac><mo>≈</mo><mn>31.33</mn></mrow></math></entry>
