  <tgroup cols="7">
  <colspec colnum="1" colname="c1" colwidth="1pt"/>
  <colspec colnum="2" colname="c2" colwidth="1pt"/>
  <colspec colnum="3" colname="c3" colwidth="1pt"/>
  <colspec colnum="4" colname="c4" colwidth="1pt"/>
  <colspec colnum="5" colname="c5" colwidth="1pt"/>
  <colspec colnum="6" colname="c6" colwidth="1pt"/>
  <colspec colnum="7" colname="c7" colwidth="1pt"/>
  <thead>
  <row>
 <entry/> 
  <entry>Hawaii</entry>
  <entry>Honolulu</entry>
  <entry>Kalawao</entry>
  <entry>Kauai</entry>
  <entry>Maui</entry>
  <entry>Total</entry>
  </row>
  </thead>
  <tbody>
  <row>
  <entry><emphasis effect="bold">Residents under age 19</emphasis></entry>
  <entry>46,310</entry>
  <entry>224,230</entry>
  <entry>20</entry>
  <entry>16,560</entry>
